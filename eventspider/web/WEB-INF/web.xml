<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

<!-- ********************************************************************* -->
<!-- Resources *********************************************************** -->
<!-- ********************************************************************* -->

<resource-ref>
    <description>MySQL Database</description>
    <res-ref-name>jdbc/eventspider</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
</resource-ref>

<!-- ********************************************************************* -->
<!-- Context Parameters ************************************************** -->
<!-- ********************************************************************* -->

<context-param>
    <description>Location to store uploaded file</description>
    <param-name>file-upload</param-name>
    <param-value>
        c:/Users/Kolya/Dropbox/Event-Spider/temp
    </param-value>
</context-param>

<!-- ********************************************************************* -->
<!-- JSP Configurations ************************************************** -->
<!-- ********************************************************************* -->

<servlet>
    <servlet-name>Home</servlet-name>
    <jsp-file>/index.jsp</jsp-file>
</servlet>

<servlet>
    <servlet-name>LogIn</servlet-name>
    <jsp-file>/logIn.jsp</jsp-file>
</servlet>

<servlet>
    <servlet-name>Search</servlet-name>
    <jsp-file>/search.jsp</jsp-file>
</servlet>

<servlet>
    <servlet-name>AddEvent</servlet-name>
    <jsp-file>/addEvent.jsp</jsp-file>
</servlet>

    <servlet>
        <servlet-name>SearchResultsDisplayList</servlet-name>
        <jsp-file>/searchDisplay.jsp</jsp-file>
    </servlet>

    <servlet>
        <servlet-name>EventDetails</servlet-name>
        <jsp-file>/eventDetails.jsp</jsp-file>
    </servlet>

<!-- ********************************************************************* -->
<!-- Servlet Configurations ********************************************** -->
<!-- ********************************************************************* -->

<servlet>
    <servlet-name>LogInServlet</servlet-name>
    <servlet-class>servlets.LogInServlet</servlet-class>
</servlet>

<servlet>
    <servlet-name>SearchServlet</servlet-name>
    <servlet-class>servlets.SearchServlet</servlet-class>
</servlet>

    <servlet>
        <servlet-name>AddEventManual</servlet-name>
        <servlet-class>servlets.AddEventManual</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>EventDetailsServlet</servlet-name>
        <servlet-class>servlets.EventDetailsController</servlet-class>
    </servlet>


    <!-- ********************************************************************* -->
<!-- Servlet Mappings **************************************************** -->
<!-- ********************************************************************* -->

<servlet-mapping>
    <servlet-name>Home</servlet-name>
    <url-pattern>/</url-pattern>
</servlet-mapping>

<servlet-mapping>
    <servlet-name>LogIn</servlet-name>
    <url-pattern>/login</url-pattern>
</servlet-mapping>

<servlet-mapping>
    <servlet-name>LogInServlet</servlet-name>
    <url-pattern>/logInServlet</url-pattern>
</servlet-mapping>

<servlet-mapping>
    <servlet-name>SearchServlet</servlet-name>
    <url-pattern>/searchServlet</url-pattern>
</servlet-mapping>

    <servlet-mapping>
        <servlet-name>AddEventManual</servlet-name>
        <url-pattern>/addEventManual</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Search</servlet-name>
        <url-pattern>/search</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>AddEvent</servlet-name>
        <url-pattern>/addEvent</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>SearchResultsDisplayList</servlet-name>
        <url-pattern>/search-result-list</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>EventDetails</servlet-name>
        <url-pattern>/event-details</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>EventDetailsServlet</servlet-name>
        <url-pattern>/eventDetails</url-pattern>
    </servlet-mapping>

    <!-- ********************************************************************* -->
<!-- Home Page *********************************************************** -->
<!-- ********************************************************************* -->

<welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
</welcome-file-list>

</web-app>