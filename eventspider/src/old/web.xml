<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">


    <display-name>Event Spider</display-name>
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
    <description>Search for events in your city, save to your profile, and get customized suggestions delivered every week.</description>

    <!-- ********************************************************************* -->
    <!-- Resources *********************************************************** -->
    <!-- ********************************************************************* -->

    <resource-ref>
        <description>MySQL Database</description>
        <res-ref-name>jdbc/eventspider</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

    <!-- ********************************************************************* -->
    <!-- Context Parameters ************************************************** -->
    <!-- ********************************************************************* -->

    <context-param>
        <description>Location to store uploaded file</description>
        <param-name>file-upload</param-name>
        <param-value>
            c:/Users/Kolya/Dropbox/Event-Spider/temp
        </param-value>
    </context-param>
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>/WEB-INF/applicationContext.xml</param-value>
    </context-param>

    <!-- ********************************************************************* -->
    <!-- JSP Configurations ************************************************** -->
    <!-- ********************************************************************* -->

    <servlet>
        <servlet-name>Home</servlet-name>
        <jsp-file>index.jsp</jsp-file>
    </servlet>

    <servlet>
        <servlet-name>LogIn</servlet-name>
        <jsp-file>logIn.jsp</jsp-file>
    </servlet>

    <servlet>
        <servlet-name>Search</servlet-name>
        <jsp-file>search.jsp</jsp-file>
    </servlet>

    <servlet>
        <servlet-name>AddEvent</servlet-name>
        <jsp-file>eventHandler.jsp</jsp-file>
    </servlet>

    <servlet>
        <servlet-name>SearchResultsDisplayList</servlet-name>
        <jsp-file>searchDisplay.jsp</jsp-file>
    </servlet>

    <servlet>
        <servlet-name>EventDetails</servlet-name>
        <jsp-file>eventDetails.jsp</jsp-file>
    </servlet>

    <servlet>
        <servlet-name>EventfulSearchJSP</servlet-name>
        <jsp-file>eventfulSearch.jsp</jsp-file>
    </servlet>

    <servlet>
        <servlet-name>MyEvents</servlet-name>
        <jsp-file>myEvents.jsp</jsp-file>
    </servlet>

    <!-- ********************************************************************* -->
    <!-- Servlet Configurations ********************************************** -->
    <!-- ********************************************************************* -->

    <servlet>
        <servlet-name>LogInServlet</servlet-name>
        <servlet-class>servlets.LogInServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>SearchServlet</servlet-name>
        <servlet-class>servlets.SearchServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>AddEventManual</servlet-name>
        <servlet-class>servlets.AddEventManual</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>EventDetailsServlet</servlet-name>
        <servlet-class>servlets.EventDetailsController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EventfulSearchServlet</servlet-name>
        <servlet-class>servlets.EventfulSearch</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>AddEventToUser</servlet-name>
        <servlet-class>servlets.AddEventToUser</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>UserEventsDisplay</servlet-name>
        <servlet-class>servlets.UserEventsDisplay</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>ErrorTestingServlet</servlet-name>
        <servlet-class>servlets.ErrorTestingServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>dispatcher</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>


    <!-- ********************************************************************* -->
    <!-- Servlet Mappings **************************************************** -->
    <!-- ********************************************************************* -->

    <servlet-mapping>
        <servlet-name>Home</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>LogIn</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>LogInServlet</servlet-name>
        <url-pattern>/logInServlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>SearchServlet</servlet-name>
        <url-pattern>/searchServlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>AddEventManual</servlet-name>
        <url-pattern>/addEventManual</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Search</servlet-name>
        <url-pattern>/search</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>AddEvent</servlet-name>
        <url-pattern>/eventHandler</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>SearchResultsDisplayList</servlet-name>
        <url-pattern>/search-result-list</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>EventDetails</servlet-name>
        <url-pattern>/event-details</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>EventDetailsServlet</servlet-name>
        <url-pattern>/eventDetails</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>EventfulSearchServlet</servlet-name>
        <url-pattern>/eventfulSearch</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>EventfulSearchJSP</servlet-name>
        <url-pattern>/eventful-search</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddEventToUser</servlet-name>
        <url-pattern>/addEventToUser</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>MyEvents</servlet-name>
        <url-pattern>/my-events</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>UserEventsDisplay</servlet-name>
        <url-pattern>/myEventsController</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ErrorTestingServlet</servlet-name>
        <url-pattern>/errorTestingServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>dispatcher</servlet-name>
        <url-pattern>*.form</url-pattern>
    </servlet-mapping>


    <!-- ********************************************************************* -->
    <!-- Home Page *********************************************************** -->
    <!-- ********************************************************************* -->

    <welcome-file-list>
        <welcome-file>WEB-INF/index.jsp</welcome-file>
    </welcome-file-list>

    <!-- ********************************************************************* -->
    <!-- Error Pages ********************************************************* -->
    <!-- ********************************************************************* -->

    <error-page>
        <error-code>500</error-code>
        <location>/src/old/error.jsp</location>
    </error-page>

    <error-page>
        <error-code>404</error-code>
        <location>/src/old/notFound.jsp</location>
    </error-page>

</web-app>